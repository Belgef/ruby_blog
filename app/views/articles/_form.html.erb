<article class="media">
  <div class="media-content">
    <%= form_with model: article do |form| %>
      <div class="field">
        <div class="control">
          <%= form.label :title, :class => 'title is-6' %>
          <%= form.text_field :title, :class => "input" %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= form.label :body, :class => 'title is-6' %>
          <%= form.text_area :body, :class => "textarea"%>
        </div>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          <div class='control'>
            <div class="label spaced">
              <%= form.label :status, :class => "title is-6 is-centered" %>
            </div>
          </div>
          <div class="select">
            <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
          </div>
        </div>
        <div class="level-right">
          <div class='field has-text-centered'>
            <div class='control'>
              <%= form.submit "Save Article", :class => 'button is-link'%>
            </div>
          </div>
        </div>
      </nav>
    <% end %>
  </div>
</article>